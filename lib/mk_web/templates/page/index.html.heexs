<!-- steps of work -->
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="text-center mb-20">
      <h1 class="sm:text-5xl text-2xl font-medium title-font text-gray-900 mb-4">Этапы работ</h1>
      <p class="text-base leading-relaxed xl:w-2/4 lg:w-3/4 mx-auto text-gray-500s">Мы легко и надежно проведем вас от первой встречи до сдачи всех работ и торжественного вручения ключей от вашей новой красивой и чистой квартиры.</p>
      <div class="flex mt-6 justify-center">
        <div class="w-16 h-1 rounded-full bg-warm-gray-500 inline-flex"></div>
      </div>
    </div>
    <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 space-y-6">
      <%= for {step, index} <- Enum.with_index(@steps, 1) do %>
        <div class="p-4 md:w-1/3 flex flex-col text-center items-center mb-12">
          <div class="w-24 h-24 inline-flex items-center justify-center mb-5 flex-shrink-0">
            <img id="_Image833"  class="block w-full h-full"src="<%= Routes.static_path(@socket, "/images/steps/#{step.img}") %>"/>
          </div>
          <div class="flex-grow">
            <h2 class="text-gray-900 text-lg title-font font-medium mb-3"><%= "#{index}. #{step.label}" %></h2>
            <p class="leading-relaxed text-base"><%= step.content %></p>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</section>

<!-- our works -->
<section class="">
  <h2 class=" w-max text-xl xs:text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-semibold mb-12 mx-auto">Наши работы</h2>
  <ul class="w-full grid grid-cols-2 gap-2 xs:gap-4 sm:gap-8 auto-rows-min">
    <%= for {work, index} <- Enum.with_index(works(), 1) do %>
      <li class="group relative w-full h-full">
        <a class="w-full h-full flex items-center text-xl xs:text-2xl sm:text-3xl md:text-4xl">
          <div class="absolute inset-0 w-full h-full bg-black bg-opacity-30"></div>
          <p class="absolute w-full h-full inset-0 flex items-center justify-center text-white text-center"> <%= work.name %></p>
          <img class="block object-cover w-full h-full max-h-96" id="<%= "Image#{index}_1" %>" src="<%= Routes.static_path(@socket, "/images/#{work.folder}/#{List.first(work.images)}") %>" />
        </a>
        <div class="absolute hidden inset-0 bg-black bg-opacity-70 pt-1 group-hover:flex items-center justify-center cursor-pointer  opacity-0 transition-opacity duration-300 ease-in-out hover:opacity-100 ">
          <p class=""></p>
					<%= live_patch("Посмотреть Проект",
								to:
									Routes.page_path(@socket, :slider, [
                    sl_fol: work.folder,
                    sl_img: work.images,
                    sl_name: work.name,
                    sl_desc: work.description
                  ]),
									class: "text-xl text-center bg-white text-warm-gray-700 py-2 px-4 rounded-md"
							) %>

        </div>
      </li>
    <% end %>
  </ul>
</section>